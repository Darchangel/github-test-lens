{
  "manifest_version": 2,

  "name": "Github TestLens",
  "description": "This extension allows jumping between code and tests when reviewing code in Github.",
  "version": "0.1",

  "permissions": [
    "storage"
  ],

  "icons": {
    "16": "img/icon-16.png",
    "32": "img/icon-32.png",
    "48": "img/icon-48.png",
    "64": "img/icon-64.png",
    "128": "img/icon-128.png"
  },

  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "https://github.com/*/pull/*/files",
        "https://github.com/*/compare/*"
      ],
      "js": [
        "levenshtein.min.js",
        "options/defaults.js",
        "littleElves.js"
      ]
    }
  ],

  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  }
}